[module/screencast]
type = custom/script
interval = 1
label = %output%
label-padding-right = 2
click-left = screencast start &
click-right = screencast stop &
exec = screencast
tail = true

[module/powermenu]
type = custom/menu

expand-right = false

label-open = 
