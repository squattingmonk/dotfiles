[colors]
background = ${xrdb:background}
background-alt = ${xrdb:color0}
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:foreground}
primary = ${xrdb:color8}
secondary = ${xrdb:color6}
alert = ${xrdb:color1}

[bar/top]
bottom = false
width = 100%
height = 40
offset-x = 0
offset-y = 0
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
border-bottom-size = 4
border-bottom-color = ${colors.primary}
padding = 2
module-margin-left = 0
module-margin-right = 2

font-0 = "Fira Sans:style=Medium:size=14;3"
font-1 = "FiraCode Nerd Font Mono:style=regular:size=20;4"
;font-2 = "Symbols Nerd Font Mono:size=20;4"

wm-restack = bspwm
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

modules-left = bspwm

[bar/solstice]
inherit = bar/top
modules-center = xwindow
modules-right = screencast wlan-solstice volume date powermenu

[bar/equinox]
inherit = bar/top
modules-right = wlan-equinox brightnessctl volume battery date powermenu

[module/xwindow]
type = internal/xwindow
label = %title%


[module/bspwm]
type = internal/bspwm
fuzzy-match = true

ws-icon-0 = term;
ws-icon-1 = web;
ws-icon-2 = comms;
ws-icon-3 = games;
ws-icon-4 = docs;

label-focused = %icon%  %name%
label-focused-foreground = ${colors.foreground}
label-focused-padding = 2

label-occupied = %icon%  %name%
label-occupied-foreground = ${colors.secondary}
label-occupied-padding = 2

label-urgent = %icon%  %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %icon%  %name%
label-empty-foreground = ${colors.primary}
label-empty-padding = 2


[module/xbacklight]
type = internal/xbacklight

format = <ramp><label>
label = %percentage%%

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-padding-left = 2
ramp-padding-right = 2

[module/brightnessctl]
type = custom/script
exec = ~/.config/polybar/brightnessctl.sh

scroll-up = exec brightnessctl set +5%
scroll-down = exec brightnessctl set 5%-
interval = 1
label = %output%
label-foreground = ${colors.foreground}
label-padding-left = 2

[module/wlan]
type = internal/network
interface =
interval = 3.0

format-connected = <label-connected>
label-connected =   %essid%

format-disconnected = <label-disconnected>
label-disconnected =   %ifname%
label-disconnected-foreground = ${colors.alert}

format-packet-loss = <label-packetloss>
label-packetloss =   %essid%
label-packetloss-foreground = ${colors.alert}

[module/wlan-solstice]
inherit = module/wlan
interface = wlan0

[module/wlan-equinox]
inherit = module/wlan
interface = wlan0


[module/date]
type = internal/date
interval = 1

date =
date-alt = " %A %B %d, %Y "

time = "%l:%M %p"
time-alt = %H:%M:%S

format-prefix = ""
format-prefix-padding-left = 2
format-prefix-padding-right = 2

label = %date%%time%

[module/volume]
