[colors]
background = ${xrdb:background}
background-alt = ${xrdb:color0}
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:foreground}
primary = ${xrdb:color8}
secondary = ${xrdb:color6}
alert = ${xrdb:color1}

[bar/top]
bottom = false
width = 100%
height = 32
offset-x = 0
offset-y = 0
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
border-bottom-size = 4
border-bottom-color = ${colors.primary}
padding = 2
module-margin-left = 0
module-margin-right = 2

font-0 = "Roboto:style=Medium:size=12;3"
font-1 = "Material Icons:size=12;4"

wm-restack = bspwm
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

modules-left = bspwm

[bar/solstice]
inherit = bar/top
modules-center = xwindow
modules-right = wlan-solstice volume date powermenu

[bar/equinox]
inherit = bar/top
modules-right = wlan-equinox xbacklight volume battery date powermenu

[module/xwindow]
type = internal/xwindow
label = %title%


[module/bspwm]
type = internal/bspwm
fuzzy-match = true

ws-icon-0 = term;
ws-icon-1 = web;
ws-icon-2 = docs;
ws-icon-3 = comms;
ws-icon-4 = games;

label-focused = %icon% %name%
label-focused-foreground = ${colors.foreground}
label-focused-padding = 2

label-occupied = %icon% %name%
label-occupied-foreground = ${colors.secondary}
label-occupied-padding = 2

label-urgent = %icon% %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %icon% %name%
label-empty-foreground = ${colors.primary}
label-empty-padding = 2


[module/xbacklight]
type = internal/xbacklight

format = <ramp> <label>
label = %percentage%%

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-padding-left = 2


[module/wlan]
type = internal/network
interface = 
interval = 3.0

format-connected = <label-connected>
label-connected =  %essid%

format-disconnected = <label-disconnected>
label-disconnected =  %ifname%
label-disconnected-foreground = ${colors.alert}

format-packet-loss = <label-packetloss>
label-packetloss =  %essid%
label-packetloss-foreground = ${colors.alert}

[module/wlan-solstice]
inherit = module/wlan
interface = wlp4s0

[module/wlan-equinox]
inherit = module/wlan
interface = wlp1s0


[module/date]
type = internal/date
interval = 1

date = 
date-alt = " %A %B %d, %Y"

time = "%l:%M %p"
time-alt = %H:%M:%S

format-prefix = ""
format-prefix-padding-left = 2

label = %date% %time%

[module/volume]
type = internal/volume

format-volume = <ramp-volume> <label-volume>

label-muted =  mute
label-muted-padding-left = 2

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-padding-left = 2

label-volume = %percentage%%
label-volume-foreground = ${root.foreground}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP0
full-at = 98

format-charging = <label-charging>
format-charging-underline = #ffb52a

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full = <label-full>

label-charging =  %percentage%%
label-charging-padding-left = 2

label-discharging = %percentage%%

label-full =  %percentage%%
label-full-padding-left = 2

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-padding-left = 2
ramp-capacity-0-foreground = ${colors.alert}


[module/powermenu]
type = custom/menu

expand-right = false

label-open = 
label-open-foreground = ${colors.secondary}
label-open-padding-left = 1
label-close =  cancel
label-close-foreground = ${colors.secondary}
label-separator = "|"
label-separator-padding = 2

menu-0-0 = "reboot "
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = reboot
menu-1-0-exec = reboot

menu-2-0 = power off
menu-2-0-exec = poweroff

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

